{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div>
  <h2 class="text-sm font-medium text-gray-500">Last 4 projects</h2>
  <ul role="list" class="mt-3 grid grid-cols-1 gap-5 sm:grid-cols-2 sm:gap-6 lg:grid-cols-4">
  {% for project in projects %}
    <li class="col-span-1 flex rounded-md shadow-xs">
      <div class="{% if project.status.value == 'Cancelled' %}bg-pink-600{% endif %} {% if project.status.value == 'Completed' %}bg-green-600{% endif %} {% if project.status.value == 'In progress' %}bg-blue-600{% endif %} {% if project.status.value == 'Not started' %}bg-gray-600{% endif %} flex w-16 shrink-0 items-center justify-center rounded-l-md text-sm font-medium text-white">{{ project.title|slice(0, 2) }}</div>
      <div class="flex flex-1 items-center justify-between truncate rounded-r-md border-t border-r border-b border-gray-200 bg-white">
        <div class="flex-1 truncate px-4 py-2 text-sm">
          <a href="#" class="font-medium text-gray-900 hover:text-gray-600">{{ project.title }}</a>
          <p class="text-gray-500">{{ project.status.value }}</p>
        </div>
        <div class="shrink-0 pr-2">
        <a href="{{ path('app_projects_show', {'id': project.id}) }}" class="inline-flex size-8 items-center justify-center rounded-full bg-transparent bg-white text-gray-400 hover:text-gray-500 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-hidden">
            <span>></span>
            </a>
        </div>
      </div>
    </li>
  {% endfor %}
  </ul>
</div>
  <h2 class="text-sm font-medium text-gray-500 mt-4">Last 4 clients</h2>
  <ul role="list" class="mt-3 grid grid-cols-1 gap-5 sm:grid-cols-2 sm:gap-6 lg:grid-cols-4">
  {% for client in clients %}
    <li class="col-span-1 flex rounded-md shadow-xs">
      <div class="bg-gray-600 flex w-16 shrink-0 items-center justify-center rounded-l-md text-sm font-medium text-white">{{ client.name|slice(0, 2) }}</div>
      <div class="flex flex-1 items-center justify-between truncate rounded-r-md border-t border-r border-b border-gray-200 bg-white">
        <div class="flex-1 truncate px-4 py-2 text-sm">
          <a href="#" class="font-medium text-gray-900 hover:text-gray-600">{{ client.name }}</a>
          <p class="text-gray-500">{{ client.email }}</p>
        </div>
        <div class="shrink-0 pr-2">
          <a href="{{ path('app_clients_show', {'id': client.id}) }}" class="inline-flex size-8 items-center justify-center rounded-full bg-transparent bg-white text-gray-400 hover:text-gray-500 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-hidden">
            <span>></span>
            </a> 
        </div>
      </div>
    </li>
    
  {% endfor %}
  </ul>
</div>

{% endblock %}
