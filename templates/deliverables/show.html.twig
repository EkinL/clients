{% extends 'base.html.twig' %}

{% block title %}Deliverables{% endblock %}

{% block body %}
    <h1>Deliverables</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deliverable.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ deliverable.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ deliverable.description }}</td>
            </tr>
            <tr>
                <th>Delivery_date</th>
                <td>{{ deliverable.deliveryDate ? deliverable.deliveryDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ deliverable.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_deliverables_index') }}">back to list</a>

    <a href="{{ path('app_deliverables_edit', {'id': deliverable.id}) }}">edit</a>

    {{ include('deliverables/_delete_form.html.twig') }}
{% endblock %}
